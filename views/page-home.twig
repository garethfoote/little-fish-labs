{% extends "base.twig" %}

{% block content %}
	<section 
    {% if post.meta('main_background_image') -%} 
      style="background-image: url('{{ get_image(post.meta('main_background_image')).src }}');" 
    {% else %} 
      style="background-image: url('{{ theme.link }}/assets/img/hp-hero-bg.svg');" 
    {% endif %} 
    class="lfl-hp-hero lfl-section pb-6">
      <div class="lfl-hero-intro max-w-md relative left-[3%] top-12 text-white">
        <div class="lfl-heading-s xs:lfl-heading-m sm:lfl-heading-l pb-12">Solving modern day problems with holistic solutions</div>
        <a href="" class="lfl-link-button lfl-link-button--light">Learn more
          <span class="sr-only">about Little Fish Labs</span>
        </a>
		</div>
	</section>

	<section class="bg-white pb-12">
	  <div class="lfl-section md:h-72">
      <div class="lfl-hp-quote bottom-border py-6">
        <div class="lfl-hp-quote__image">
          <img class="w-full h-auto block" src="{{get_image(post.meta('quote_block').image).src}}" alt="Picture of founder Jade"/>
        </div>
        <div>
          <div class="lfl-hp-quote__quote mb-4">
            &ldquo;{{post.meta('quote_block').quote}}&rdquo;
          </div>
          <div class="lfl-hp-quote__name">
            {{post.meta('quote_block').name}}
          </div>
        </div>
      </div>
		</div>
	</section>

	<section class="bg-white pb-12">
	  <div class="lfl-section">
      <div class="bottom-border pb-12">
        <h2 class="eyebrow pb-6">What we do</h2>
        <div class="lfl-wwd-container">
          {% for item in post.meta('what_we_do_blocks') %}
            <article class="lfl-wwd">
              <div class="lfl-wwd__image">
                <img class="object-fill max-w-[100px] max-h-[100px]" src="{{ get_image(item.icon).src }}" aria-hidden="true"/>
              </div>
              <h3 class="lfl-wwd__title">{{ item.title }}</h3>
              <p class="lfl-wwd__detail">{{ item.detail }}</p>
              <div class="lfl-wwd__link">
                <a href="" class="lfl-link-button">Learn more
                  <span class="sr-only">about
                    {{ item.title }}</span>
                </a>
              </div>
            </article>
          {% endfor %}
        </div>
      </div>
    </div>
	</section>

  <section class="bg-white pb-12">
	  <div class="lfl-section">
      <div class="bottom-border pb-12">
        <h2 class="eyebrow mb-0">Our Brands</h2>
        <p class="lfl-heading-xs text-blue-700">Lorem ipsom dolor sit amet</p>
        <p class="max-w-prose mb-8">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi eleifend leo ac hendrerit posuere. Praesent sed placerat nisi.</p>

        <div class="lfl-hp-brands-container">
        {% for brand in get_posts(post.meta('brands')) %}
          <article class="lfl-hp-brand">
            <div class="lfl-hp-brand__image">
              <img src="{{get_image(brand.meta('brand_image')).src}}" alt="Logo for {{brand.title}}" />
            </div>
            <div class="lfl-hp-brand__content">
              <div>
                {{brand.meta('brand_description')}}
              </div>
              <a href="" class="lfl-link-button mb-0">Learn more
                <span class="sr-only">about {{brand.title}}</span>
              </a>
            </div>
          </article>
        {% endfor %}
        </div>
      </div>
    </div>
  </section>
{% endblock %}
