{% extends "base-white.twig" %}

{% block content %}
  <div class="bg-white pb-12">
    <section class="lfl-section pt-12">
    
      <div class="lfl-page-hero{% if post.meta('switch_hero_image') %} lfl-page-hero--right {% endif %}xl:min-h-[430px]">
        <div class="lfl-page-hero__content">
          {% include "partial/page-hero.twig" %}
        </div>
        <div class="lfl-page-hero__image" aria-hidden="true">
          <img src="{{get_image(post.meta('hero_image')).src}}" alt="{{get_image(post.meta('hero_image').image).alt|default(get_image(post.meta('hero_image')).title)}}" />
        </div>
      </div>
    </section>   
    
    <section class="lfl-section pt-12">
      <p class="lfl-callout mt-18">
        {{post.meta('large_quote')}}
      </p>
    </section>

    <section class="lfl-section pt-12">
      <div class="lfl-wwd-container">
      {% for item in post.meta('wwd_blocks') %}
        <article id="wwd-{{item.ID}}" class="lfl-wwd">
          <div class="mb-6">
            <img class="object-fill max-w-[100px] max-h-[100px]" src="{{ get_image(item.wwd_icon).src }}" aria-hidden="true"/>
          </div>
          <h3 class="text-blue-600 mb-4">{{ item.post_title }}</h3>
          <div class="max-w-prose">{{ item.wwd_detail|wpautop }}</div>
        </article>
    {% endfor %}
    </div>
    </section>
  </div>
{% endblock %}
